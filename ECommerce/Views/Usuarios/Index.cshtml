@model IEnumerable<ECommerce.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Nuevo Usuario", "Create",new { },new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            Foto
        </th>
        <th>
            Ciudad
        </th>
        <th>
            Departamento
        </th>
        <th>
            Empresa
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if (!string.IsNullOrEmpty(item.Photo))
            {
                <img src="@Url.Content(item.Photo)" alt="Logo" style="width:100px;height:auto;max-width:100%;" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.UsuarioID }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Detalles", "Details", new { id = item.UsuarioID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.UsuarioID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
