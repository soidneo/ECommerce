@model IEnumerable<ECommerce.Models.Ciudad>

@{
    ViewBag.Title = "Ciudades";
}

<h2>Ciudades</h2>

<p>
    @Html.ActionLink("Nueva Ciudad", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departamento.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CiudadID }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.CiudadID }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CiudadID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
